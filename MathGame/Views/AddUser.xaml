<Window x:Class="MathGame.Views.AddUser"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MathGame.Views"
        mc:Ignorable="d"
        ResizeMode="NoResize"
        Title="Add Player" Height="106.651" Width="300"
        DataContext="{Binding RelativeSource={RelativeSource Self}}">
    <Grid>
        <StackPanel Orientation="Vertical">
            <Label Content="Player Name"></Label>
            <TextBox Name="tbPlayerName"/>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                <Button Content="Add" Margin="5,5,5,0" Command="{Binding AddPlayer}" CommandParameter="{Binding ElementName=tbPlayerName}"></Button>
                <Button Content="Cancel" Margin="5,5,5,0"></Button>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
